// computando vitórias ----------------------------------------------

//vitória em linha


soma <-  matriz[1,2] +  matriz[1,2] + matriz[1,3]
Se (soma = 300) entao
jogadas <- 10
Escreva ("Vitória do (x)")
Fimalgoritmo
Fimse

soma <- 0

